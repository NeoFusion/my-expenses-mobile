<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="payment"
            type="ru.neofusion.undead.myexpenses.domain.Payment" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPayment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_card_height"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:elevation="3dp"
            card_view:cardCornerRadius="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/etCost"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="@dimen/payment_card_cost_width"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="end"
                    android:lines="1"
                    android:padding="4dp"
                    android:text="@{payment.cost}"
                    bind:layout_constraintEnd_toEndOf="parent"
                    bind:layout_constraintStart_toEndOf="@id/etCategory"
                    bind:layout_constraintTop_toTopOf="parent"
                    tools:text="123 123.00" />

                <TextView
                    android:id="@+id/etCategory"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:padding="4dp"
                    android:text="@{payment.category}"
                    bind:layout_constraintEnd_toStartOf="@id/etCost"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintTop_toTopOf="parent"
                    tools:text="Категория 1 > Категория 2 слишком длинныое чтобы писец было неудобно" />

                <TextView
                    android:id="@+id/tvDate"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="@dimen/payment_card_cost_width"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dp"
                    android:gravity="end"
                    android:lines="1"
                    android:text="@{payment.dateFormatted}"
                    bind:layout_constraintEnd_toEndOf="parent"
                    bind:layout_constraintStart_toEndOf="@id/tvDescriptionSeller"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    tools:text="2019-11-22" />

                <TextView
                    android:id="@+id/tvDescriptionSeller"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dp"
                    android:lines="2"
                    android:text="@{payment.description+` / `+payment.seller}"
                    bind:layout_constraintEnd_toStartOf="@id/tvDate"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintTop_toBottomOf="@id/etCategory"
                    tools:text="Описание / Продавец" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>